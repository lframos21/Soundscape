<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:background="@color/darkgrey"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/home_header_logo_imageview"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_soundscape"
        android:contentDescription="@string/txt_home_header_app_logo"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/home_header_textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_home_header_title"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium" />

</LinearLayout>