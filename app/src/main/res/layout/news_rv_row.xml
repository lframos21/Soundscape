<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">
        <TextView
            android:id="@+id/news_row_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título de la noticia"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/news_row_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Este es un resumen breve de la noticia para que el lector se interese en leer más..."
            android:textColor="@color/darkgrey"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/news_row_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:text="Música"
            android:textColor="@color/gray"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/news_row_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="end"
            android:text="Publicado el 17 de enero de 2025"
            android:textColor="@color/gray"
            android:textSize="12sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
